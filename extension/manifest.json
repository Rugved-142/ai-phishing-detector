{
  "manifest_version": 3,
  "name": "AI Phishing Detector",
  "version": "0.2.0",
  "description": "Detects phishing websites in real-time",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Click to see site analysis"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "permissions": [
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ]
}