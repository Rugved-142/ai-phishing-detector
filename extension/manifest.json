{
  "manifest_version": 3,
  "name": "AI Phishing Detector",
  "version": "0.5.0",
  "description": "Protect yourself from phishing with AI-powered detection",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Phishing Detector"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "options_page": "options.html",
  
  "permissions": [
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["gemini-api.js"],
      "matches": ["<all_urls>"]
    }
  ]
}